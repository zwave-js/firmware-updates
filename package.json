{
  "name": "@zwave-js/firmware-updates",
  "version": "0.0.1",
  "description": "The firmware update service for Z-Wave JS",
  "repository": "https://github.com/zwave-js/firmware-updates",
  "author": "Dominic Griesel <dominic.griesel@nabucasa.com>",
  "license": "MIT",
  "type": "module",
  "module": "build/worker.js",
  "scripts": {
    "//b": "tsc -p tsconfig.build.json",
    "b": "esbuild --bundle --format=esm --platform=browser --sourcemap --outdir=build src/worker.ts",
    "build": "yarn run b && ts-node --esm src/maintenance/generateIndex.ts",
    "clean": "rm -rf build",
    "//watch": "yarn run b --watch --pretty",
    "lint": "eslint .",
    "test:ci": "ava",
    "test": "yarn test:ci --watch",
    "dev": "miniflare --build-command=\"yarn b\""
  },
  "dependencies": {
    "dotenv": "^16.0.1",
    "itty-durable": "^1.2.0",
    "itty-router": "^2.6.1",
    "itty-router-extras": "^0.4.2",
    "json-logic-js": "^2.0.2",
    "json5": "^2.2.1",
    "semver": "^7.3.7",
    "zod": "^3.17.3"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^3.14.1",
    "@tsconfig/node16": "^1.0.3",
    "@types/eslint": "^8.4.3",
    "@types/itty-router-extras": "^0.4.0",
    "@types/json-logic-js": "^2.0.1",
    "@types/node": "^18.0.0",
    "@types/prettier": "^2",
    "@types/semver": "^7.3.10",
    "@types/source-map-support": "^0.5.4",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.30.0",
    "@typescript-eslint/parser": "^5.30.0",
    "ava": "^4.3.0",
    "esbuild": "^0.15.6",
    "eslint": "^8.18.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.1.0",
    "miniflare": "^2.7.1",
    "nodemon": "^2.0.18",
    "prettier": "^2.7.1",
    "prettier-plugin-organize-imports": "^3.0.0",
    "supertest": "^6.2.3",
    "ts-node": "^10.8.1",
    "typescript": "~4.7.4",
    "wrangler": "^2.0.28",
    "zod-to-json-schema": "^3.17.0"
  },
  "packageManager": "yarn@3.2.1"
}
