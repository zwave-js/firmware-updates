{
	"compilerOptions": {
		"noEmit": true,
		"pretty": true,
		"diagnostics": true,
		"noErrorTruncation": true,

		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,

		"target": "es2022",
		"module": "nodenext",
		"moduleResolution": "node16",

		/* Support for Cloudflare */
		"types": ["@cloudflare/workers-types"],
		"lib": [
			"es2024",
			"ESNext.Array",
			"ESNext.Collection",
			"ESNext.Iterator"
		]
	},
	"include": ["src/**/*.ts", "test/**/*.ts"]
}
