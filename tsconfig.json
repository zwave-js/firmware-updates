{
	"extends": "@tsconfig/node16/tsconfig.json",
	"compilerOptions": {
		"noEmit": true,
		"outDir": "build",
		"importsNotUsedAsValues": "error",
		"pretty": true,
		"diagnostics": true,
		"noErrorTruncation": true,

		/* Support for Cloudflare */
		"types": ["@cloudflare/workers-types", "node"],
		"target": "ESNext"
	},
	"include": [
		"src/**/*.ts",
		"src/**/*.mts",
		"test/**/*.ts",
		"src/worker.ts",
		"src/maintenance/makeAPIKey.ts"
	]
}
