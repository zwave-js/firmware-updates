{
	"extends": "@tsconfig/node16/tsconfig.json",
	"compilerOptions": {
		"noEmit": true,
		"outDir": "build",
		"importsNotUsedAsValues": "error",
		"pretty": true,
		"diagnostics": true,
		"noErrorTruncation": true,

		/* Support for Cloudflare */
		"types": ["@cloudflare/workers-types", "node"],
		"module": "ES2020",
		"moduleResolution": "node"
	},
	"include": ["src/**/*.ts", "test/**/*.ts"]
}
