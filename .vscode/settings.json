{
	"typescript.tsdk": "node_modules/typescript/lib",
	"typescript.enablePromptUseWorkspaceTsdk": true,
	"editor.formatOnSave": true,
	"editor.defaultFormatter": "esbenp.prettier-vscode",
	"eslint.validate": [
		"javascript",
		"javascriptreact",
		"typescript",
		"typescriptreact"
	],
	"[jsonc]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},
	"files.associations": {
		"**/firmwares/**/*.json": "jsonc"
	},
	"json.schemas": [
		{
			"fileMatch": ["/firmwares/**/*.json"],
			"url": "/schemas/firmware.json"
		}
	],
	"chat.tools.terminal.autoApprove": {
		"yarn check": true,
		"yarn lint": true,
		"yarn test": true,
		"yarn prettier -w": true,
		"yarn tsc --noEmit": true,
		"rm": false,
		"rmdir": false,
		"del": false,
		"kill": false,
		"curl": false,
		"wget": false,
		"eval": false,
		"chmod": false,
		"chown": false,
		"/^Remove-Item\\b/i": false
	}
}
